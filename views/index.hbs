    <title>Hello, world!</title>
</head>

<body>

    <header>

        <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Tech World </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-5 me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#"> Home </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"> Cart </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"> Shopes </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"> Offers </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"> New </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                Categories
                            </a>
                            <ul class="dropdown-menu bg-primary">
                                <li><a class="dropdown-item text-white" href="#">Mobiles</a></li>
                                <li><a class="dropdown-item text-white" href="#">Tablets</a></li>
                                <li><a class="dropdown-item text-white" href="#">Computers</a></li>
                                <li><a class="dropdown-item text-white" href="#">Smart Wathes</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                Accessories
                            </a>
                            <ul class="dropdown-menu bg-primary">
                                <li><a class="dropdown-item text-white" href="#">Headset</a></li>
                                <li><a class="dropdown-item text-white" href="#">Charger</a></li>
                                <li><a class="dropdown-item text-white" href="#">Back Covers</a></li>

                            </ul>
                        </li>
                    </ul>

                    <form class="d-flex" action="/logout" method="get">
                        <span class="text-white-50 mt-2 me-4">{{user}} </span>
                        <button class="btn btn-outline-light" type="submit" onclick="logout()">Log Out</a> </button>
                    </form>
                </div>
            </div>
        </nav> -
    </header>

    
    <section>
        <div class="container mt-5">
            <div class="row">
                {{#each products}}
                <div class="col-lg-3 col-md-4 col-sm-6 mt-3" >
                    <div class="card" style="width: 100%; height:570px ">
                        <div style="height: 400px; ;">
                        <img src="{{this.Image}}" style="width: 100%; height:auto " class="card-img-top" alt="Card image cap"></div>
                        <div class="card-body" >
                            <h5 class="card-title">{{this.price}}</h5>
                            <p class="card-text">{{this.description}}</p>
                            <a href="#" class="btn btn-primary">Add to Cart</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>
    <script>
        function logout(){
            alert("You Logged out successfully")
        }
    </script>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
